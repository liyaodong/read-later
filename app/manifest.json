{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/clock.png",
    "128": "images/clock.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "background",
    "history",
    "notifications",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/clock.png",
      "38": "images/clock.png"
    },
    "default_title": "read-later",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/clock.png"
  ]
}
